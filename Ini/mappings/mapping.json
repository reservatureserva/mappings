{
    "settings": {
        "analysis": {
            "filter": {
                "spanish_stop": {
                    "type":       "stop",
                    "stopwords":  "_spanish_" 
                },
                "spanish_omitted":{
                    "type": "stop",
                    "stopwords_path": "stopwords/words.txt"
                },
                "spanish_keywords": {
                    "type":       "keyword_marker",
                    "keywords":   ["ejemplo"] 
                },
                "spanish_stemmer": {
                    "type":       "stemmer",
                    "language":   "light_spanish"
                }
            },
            "analyzer": {
                "spanish": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "char_filter": [
                        "html_strip"
                    ],
                    "filter": [
                        "spanish_omitted", "lowercase", "spanish_stop", "spanish_keywords", "spanish_stemmer"
                    ]
                }
            }
        }
    },
    "mappings": {
        "usuarios": {
            "dynamic": "strict",
            "properties": {
                "dni": {
                    "type": "keyword"
                },
                "nombreCompleto": {
                    "type": "keyword"
                },
                "email": {
                    "type": "keyword"
                },
                "telefono":{
                    "type": "keyword"
                },
                "fecha_nacimiento":{
                    "type": "date",
                    "format": "epoch_second"
                },
                "fecha_registro":{
                    "type": "date",
                    "format": "epoch_second"
                }
            }
        },
        "empresas": {
